<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/event_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/location_create"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <TextView
            android:id="@+id/location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/Location"
            android:textSize="70px"
            app:layout_constraintLeft_toRightOf="@+id/location_create"
            app:layout_constraintTop_toBottomOf="@id/editText" />

        <EditText
            android:id="@+id/input_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/location_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/time_create"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_location" />

        <TextView
            android:id="@+id/time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/input_location"
            app:layout_constraintLeft_toRightOf="@+id/time_create"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:text="@string/time"
            android:textSize="70px"
            />
        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/time_create">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:layout_marginStart="20dp"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/textview_boarder"
                android:layout_marginLeft="25dp"

                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/ll_date">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_boarder"
                android:layout_marginLeft="20dp"

                android:padding="8dp"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_time">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:layout_marginStart="26dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv1_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:background="@drawable/textview_boarder"
                android:padding="8dp"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/ll1_date">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_time"
                android:layout_marginStart="26dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv1_time"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_boarder"
                android:padding="8dp"
                android:layout_marginStart="23dp"
                android:textSize="20sp"
                />

        </LinearLayout>











        <ImageView
            android:id="@+id/description_create"
            android:layout_width="50dp"
            android:layout_height="38dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll1_time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_description"/>

        <TextView
            android:id="@+id/description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ll1_time"
            app:layout_constraintLeft_toRightOf="@+id/description_create"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:text="@string/Description"
            android:textSize="70px"
            />

        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description_create"
            app:layout_constraintLeft_toLeftOf="parent"

            />

        <ImageView
            android:id="@+id/ticket_create"
            android:layout_width="50dp"
            android:layout_height="38dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_description"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ticket"/>

        <TextView
            android:id="@+id/ticket_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/input_description"
            app:layout_constraintLeft_toRightOf="@+id/ticket_create"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:text="@string/ticket"
            android:textSize="70px"
            />

        <TextView
            android:id="@+id/quantity_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ticket_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="24dp"
            android:text="@string/quantity"
            android:textSize="60px"
            />

        <EditText
            android:id="@+id/input_quantity"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/textview_boarder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ticket_textview" />

        <TextView
            android:id="@+id/price_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/quantity_create"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="38dp"
            android:text="@string/price"
            android:textSize="60px"
            />

        <EditText
            android:id="@+id/input_price"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textview_boarder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_quantity"
            android:inputType="number"/>
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/input_price"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/textview_boarder"
            android:text="Submit"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:onClick="submit"


            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>